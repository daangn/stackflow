{
  "name": "@stackflow/monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "docs",
    "config",
    "core",
    "demo",
    "integrations/*",
    "packages/*",
    "extensions/*"
  ],
  "scripts": {
    "build": "ultra -r build",
    "build:dts": "ultra -r --build build:dts",
    "clean": "ultra -r clean",
    "dev": "ultra -r --concurrency 100 dev",
    "format": "biome check --write .",
    "lint": "biome lint .",
    "changeset:version": "changeset version && bun install --no-save",
    "release": "bun run clean && bun run build && changeset && bun run changeset:version && changeset publish",
    "release:canary": "bun run clean && bun run build && changeset pre enter canary && changeset && bun run changeset:version && changeset publish && changeset pre exit",
    "test": "bun run build && ultra -r test",
    "typecheck": "ultra -r typecheck",
    "version": "bun install && git add bun.lock"
  },
  "overrides": {
    "@mdx-js/react": "3.0.1",
    "@types/react": "18.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/cli": "^2.28.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "typescript": "^5.5.3",
    "ultra-runner": "^3.10.5"
  },
  "packageManager": "bun@1.3.1"
}
